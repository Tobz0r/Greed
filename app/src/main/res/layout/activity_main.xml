<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tobz0r.greed.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Score :"
        android:id="@+id/scoreScreen"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Turn score :"
        android:id="@+id/turnScore"
        android:layout_below="@+id/scoreScreen"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:id="@+id/dice1"
        android:background="@drawable/white1"
        android:layout_below="@+id/turnScore"
        android:layout_alignEnd="@+id/dice4" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dice2"
        android:background="@drawable/white2"
        android:layout_alignTop="@+id/dice3"
        android:layout_alignStart="@+id/dice5" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dice3"
        android:background="@drawable/white3"
        android:layout_above="@+id/dice5"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dice4"
        android:background="@drawable/white4"
        android:layout_below="@+id/dice1"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dice5"
        android:background="@drawable/white5"
        android:layout_alignTop="@+id/dice4"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dice6"
        android:background="@drawable/white6"
        android:layout_below="@+id/dice2"
        android:layout_alignStart="@+id/dice3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/saveBtn"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/dice5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score"
        android:id="@+id/scoreBtn"
        android:layout_alignTop="@+id/saveBtn"
        android:layout_toEndOf="@+id/saveBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Throw"
        android:id="@+id/throwBtn"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/dice2" />

</RelativeLayout>
