<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.dv13tes.greed.MainActivity">
    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:id="@+id/RelativeLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".20"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Score :"
            android:id="@+id/scoreScreen"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Turn score :"
            android:id="@+id/turnScore"
            android:layout_below="@+id/scoreScreen"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".20"
            android:id="@+id/dice1"
            android:background="@drawable/white1"
            android:layout_below="@+id/turnScore"
            android:layout_alignEnd="@+id/dice4" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dice2"
            android:layout_weight=".20"
            android:background="@drawable/white2"
            android:layout_alignTop="@+id/dice1"
            android:layout_alignEnd="@+id/scoreBtn" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dice3"
            android:layout_weight=".20"
            android:background="@drawable/white3"
            android:layout_above="@+id/dice5"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dice4"
            android:layout_weight=".20"
            android:background="@drawable/white4"
            android:layout_below="@+id/dice1"
            android:layout_alignParentStart="false" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dice5"
            android:background="@drawable/white5"
            android:layout_below="@+id/dice1"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dice6"
            android:layout_weight=".20"
            android:background="@drawable/white6"
            android:layout_below="@+id/dice2"
            android:layout_alignStart="@+id/dice3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_weight=".20"
            android:id="@+id/saveBtn"
            android:layout_alignBaseline="@+id/throwBtn"
            android:layout_alignBottom="@+id/throwBtn"
            android:layout_toStartOf="@+id/dice5" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score"
            android:layout_weight=".20"
            android:id="@+id/scoreBtn"
            android:layout_alignBaseline="@+id/throwBtn"
            android:layout_alignBottom="@+id/throwBtn"
            android:layout_alignEnd="@+id/dice5" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Throw"
            android:layout_weight=".20"
            android:id="@+id/throwBtn"
            android:layout_below="@+id/dice6"
            android:layout_toEndOf="@+id/dice2"
            android:layout_marginTop="25dp" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
