<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/ScrollView01"
        tools:context="com.dv13tes.greed.MainActivity">
        <RelativeLayout
            android:id="@+id/RelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".20"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Score :"
                android:id="@+id/scoreScreen"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Turn score :"
                android:id="@+id/turnScore"
                android:layout_below="@+id/scoreScreen"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".20"
                android:id="@+id/dice1"
                android:layout_below="@+id/turnScore"
                android:layout_alignEnd="@+id/dice4"
                android:src="@drawable/white1" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dice2"
                android:layout_weight=".20"
                android:layout_alignTop="@+id/dice1"
                android:layout_alignEnd="@+id/dice5"
                android:src="@drawable/white2" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dice3"
                android:layout_weight=".20"
                android:layout_above="@+id/dice5"
                android:layout_alignParentEnd="true"
                android:src="@drawable/white3" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dice4"
                android:layout_weight=".20"
                android:layout_below="@+id/dice1"
                android:layout_alignParentStart="false"
                android:src="@drawable/white4" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dice5"
                android:layout_below="@+id/dice1"
                android:layout_centerHorizontal="true"
                android:src="@drawable/white5" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dice6"
                android:layout_weight=".20"
                android:layout_below="@+id/dice2"
                android:layout_alignStart="@+id/dice3"
                android:src="@drawable/white6" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_weight=".20"
                android:id="@+id/saveBtn"
                android:layout_alignTop="@+id/turnBtn"
                android:layout_toStartOf="@+id/dice2" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Throw"
                android:layout_weight=".20"
                android:id="@+id/throwBtn"
                android:layout_below="@+id/dice6"
                android:layout_toEndOf="@+id/dice2"
                android:layout_marginTop="25dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save turn"
                android:id="@+id/turnBtn"
                android:layout_alignTop="@+id/throwBtn"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </LinearLayout>
