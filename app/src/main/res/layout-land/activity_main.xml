<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dv13tes.greed.MainActivity">
    
        <RelativeLayout
            android:id="@+id/RelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".20"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Score :"
                android:id="@+id/scoreScreen"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Turn score :"
                android:id="@+id/turnScore"
                android:layout_below="@+id/scoreScreen"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".20"
                android:id="@+id/dice1"
                android:layout_below="@+id/turnScore"
                android:src="@drawable/white1" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dice2"
                android:layout_weight=".20"
                android:src="@drawable/white2"
                android:layout_above="@+id/s"
                android:layout_alignStart="@+id/dice4" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dice3"
                android:layout_weight=".20"
                android:src="@drawable/white3"
                android:layout_below="@+id/dice2"
                android:layout_alignParentStart="true" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dice4"
                android:layout_weight=".20"
                android:src="@drawable/white3"
                android:layout_alignTop="@+id/s"
                android:layout_alignParentEnd="true" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dice5"
                android:src="@drawable/white5"
                android:layout_below="@+id/turnScore"
                android:layout_toEndOf="@+id/dice3"
                android:layout_marginStart="32dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dice6"
                android:layout_weight=".20"
                android:src="@drawable/white6"
                android:layout_marginEnd="32dp"
                android:layout_above="@+id/s"
                android:layout_toStartOf="@+id/dice2" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_weight=".20"
                android:id="@+id/s"
                android:layout_alignTop="@+id/turnBtn"
                android:layout_toStartOf="@+id/dice4" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_weight=".20"
                android:id="@+id/saveBtn"
                android:layout_below="@+id/dice1"
                android:layout_toEndOf="@+id/dice1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save turn"
                android:id="@+id/turnBtn"
                android:layout_below="@+id/dice5"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </LinearLayout>
